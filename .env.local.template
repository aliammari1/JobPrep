# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# Database Configuration
POSTGRES_PRISMA_URL="postgresql://user:password@localhost:5432/jobprep?schema=public"

# Better Auth Configuration
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here-min-32-characters"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_NAME="JobPrep"

# Google OAuth (REQUIRED for Google Sign-In)
# Setup guide: GOOGLE_OAUTH_SETUP.md
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (Optional - for development, emails are logged to console)
# Get from: https://resend.com
RESEND_API_KEY="re_your_resend_api_key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# LiveKit Configuration (Optional - for video/audio features)
LIVEKIT_API_KEY="your-livekit-api-key"
LIVEKIT_API_SECRET="your-livekit-api-secret"
NEXT_PUBLIC_LIVEKIT_URL="wss://your-livekit-server.com"

# Appwrite Configuration (Optional - for avatar function)
NEXT_PUBLIC_APPWRITE_PROJECT_ID="68dfd41f00191a47462f"
APPWRITE_ENDPOINT="https://fra.cloud.appwrite.io/v1"
APPWRITE_API_KEY="your-appwrite-api-key"
APPWRITE_LIVEKIT_AVATAR_FUNCTION_ID="jobprep-avatar"

# Node Environment
NODE_ENV="development"
