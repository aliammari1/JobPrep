{
  "manifest_version": 3,
  "name": "JobPrep LinkedIn CV Importer",
  "version": "1.0.0",
  "description": "Extract LinkedIn profile data and import it directly into JobPrep CV Builder",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.linkedin.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobPrep LinkedIn CV Importer"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*", "https://*.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}